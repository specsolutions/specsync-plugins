        }
      }
    ]
  },
  "local": {
    "tags": "not @legacy"
  },
  "remote": {
    "projectUrl": "https://dev.azure.com/specsync-demo/specsync-plugins-demo",
    "testSuite": {
      "name": "PostmanTestSource",
      "testPlanId": 198
    }
  },
  "synchronization": {
    "automation": {
      "enabled": true,
      "automatedTestType": "Postman"
    },
    "format": {
      "useExpectedResult": true
    },
    "links": [
      {
        "tagPrefix": "story"
      }
    ],
    "fieldUpdates": {
      "Description": "{local-test-case-description:HTML}"
    }
  }
}